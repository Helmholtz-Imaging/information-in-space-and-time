{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Helmholtz Universal Imaging Atlas - Schema",
  "description": "Schema for categorizing imaging techniques across five dimensions",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Common name of the modality"
    },
    "domain": {
      "type": "string",
      "description": "The primary scientific field (for filtering)"
    },
    "physics_carrier": {
      "type": "string",
      "enum": ["Photon", "Electron", "Neutron", "Magnetic Field", "Acoustic", "Gravitational Field", "Mechanical", "Particle"],
      "description": "Dimension 1: What carries the info?"
    },
    "spectral_range": {
      "type": "string",
      "description": "Specific energy band (if applicable), e.g., Visible, X-Ray, Radio, Ultrasonic, n/a"
    },
    "scale_spatial": {
      "type": "string",
      "enum": ["Nano", "Micro", "Milli", "Macro", "Kilo", "Cosmic"],
      "description": "Dimension 2: Logarithmic scale of target"
    },
    "topology": {
      "type": "string",
      "enum": ["Raster (2D)", "Voxel (3D)", "Point Cloud", "Mesh", "Tensor Field", "Sparse Events", "Graph/Relational", "Function/Model"],
      "description": "Dimension 3: Data structure"
    },
    "density": {
      "type": "string",
      "enum": ["Scalar", "Vector", "Tensor", "Spectral", "Complex (Phase/Amp)", "Vector (x,y,t,p)", "Graph"],
      "description": "Dimension 4: Information type"
    },
    "mechanism": {
      "type": "string",
      "enum": ["Passive", "Active", "Transmission", "Excitation"],
      "description": "Dimension 5: Acquisition type"
    },
    "time_dependence": {
      "type": "string",
      "enum": ["Static", "Dynamic", "Time-Lapse"],
      "description": "Is time usually captured?"
    },
    "description": {
      "type": "string",
      "description": "Short explanation of the imaging technique"
    }
  },
  "required": ["name", "domain", "physics_carrier", "scale_spatial", "topology", "density", "mechanism", "description"]
}
